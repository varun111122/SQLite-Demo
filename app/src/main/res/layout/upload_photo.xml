<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9c000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_select_document_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="Select Profile Picture"
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />

        <LinearLayout
            android:id="@+id/layout_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/_8sdp"
            android:weightSum="2">


            <RelativeLayout
                android:id="@+id/layout_takephoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <View
                    android:id="@+id/view_takephotofordocument"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/takephoto"
                    android:padding="@dimen/_8sdp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_takephotofordocument"
                    android:padding="@dimen/_4sdp"
                    android:text="Take Photo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_choosephoto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <View
                    android:id="@+id/view_choosephotofordocument"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/choosephoto"
                    android:padding="@dimen/_8sdp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_choosephotofordocument"
                    android:padding="@dimen/_4sdp"
                    android:text="Choose Photo"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9ssp" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

    <!--    <Button-->
    <!--        android:id="@+id/btn_cancel_dialog"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_below="@+id/layout_photo"-->
    <!--        android:layout_marginTop="@dimen/_8sdp"-->
